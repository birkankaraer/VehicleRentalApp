@model Vehicle

@{
    ViewData["Title"] = "Çalışma ve Bakım Süresi Güncelle";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group">
        <label for="VehicleName">Araç Adı</label>
        <input type="text" class="form-control" id="VehicleName" name="VehicleName" value="@Model.VehicleName" disabled />
    </div>
    <div class="form-group">
        <label for="PlateNumber">Plaka Numarası</label>
        <input type="text" class="form-control" id="PlateNumber" name="PlateNumber" value="@Model.PlateNumber" disabled />
    </div>
    <div class="form-group">
        <label for="ActiveWorkingHours">Aktif Çalışma Süresi (Saat)</label>
        <input type="number" class="form-control" id="ActiveWorkingHours" name="ActiveWorkingHours" value="@Model.ActiveWorkingHours" required />
    </div>
    <div class="form-group">
        <label for="MaintenanceHours">Bakım Süresi (Saat)</label>
        <input type="number" class="form-control" id="MaintenanceHours" name="MaintenanceHours" value="@Model.MaintenanceHours" required />
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
