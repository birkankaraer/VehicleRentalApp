@model Vehicle

@{
    ViewData["Title"] = "Araç Kaydı";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group">
        <label for="VehicleName">Araç Adı</label>
        <input type="text" class="form-control" id="VehicleName" name="VehicleName" required />
    </div>
    <div class="form-group">
        <label for="PlateNumber">Plaka Numarası</label>
        <input type="text" class="form-control" id="PlateNumber" name="PlateNumber" required />
    </div>
    <button type="submit" class="btn btn-primary m-2">Kaydet</button>
</form>
